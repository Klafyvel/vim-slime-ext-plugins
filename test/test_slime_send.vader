  AssertEqual "Config from TestPlugin", g:test_last_config_received_by_TestTarget, "slime#send() did not pass the right configuration."
  AssertEqual "Hello World!", g:test_last_text_received_by_TestTarget, "slime#send() did not pass the right text."

